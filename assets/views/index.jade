doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title JailBreak App
    link(href='./css/app.css', rel='stylesheet')
  body(ng-app='appMaps')
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Jailbreak 2015
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
    
    #map-container
    
    .container
      .row.row-centered
        .col-md-9.col-centered
          .panel.panel-default
            table.table.table-bordered.table-striped
              thead
                th.col-md-1 #
                th.col-md-3 Team Name
                th.col-md-4 Last Location
                th.col-md-2 Last Contacted
                th.col-md-2 Dist.
              tbody
              - var n = 1
              if (leaderboard.length)
                each team in leaderboard
                  tr
                    td= n++
                    td #{team._id.name}
                    td #{team.place}
                    td 
                      span(data-livestamp='#{team.timestamp}')
                    td #{team.distance} km

    script(src='http://maps.googleapis.com/maps/api/js?key=AIzaSyCOSGdGETZCnG79ZoWuq1JNi3aurSHMU0A')
    script(src='./js/app.js')
