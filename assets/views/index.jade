doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title JailBreak App
    link(href='./css/app.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Jailbreak 2015
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active
              a(href='#') Home
    
    .container.no-gutter
      #map-container
    
    .divider-blue
      .container
        .row
          .col-md-12
            .text-center
              h1
                |  Total 
                span#total-distance #{total}
                |  km traveled
          
    .container.main-content
      .row.row-centered
        .col-md-6
          .panel.panel-default
            table.table.table-bordered.table-striped
              thead
                th.col-md-1 #
                th.col-md-3 Team Name
                th.col-md-3 Last Location
                th.col-md-2 Last Contacted
                th.col-md-2 Dist.
                th.col-md-1 Track
              tbody
              - var n = 1
              if (leaderboard.length)
                each team in leaderboard
                  tr
                    td= n++
                    td #{team.name}
                    td #{team.place}
                    td 
                      span(data-livestamp='#{team.timestamp}')
                    td #{team.distance} km
                    td
                      a.btn.btn-success(href='/team/#{team.teamId}')
                        span.glyphicon.glyphicon-phone
                        |  Track
                        
        .col-md-6
          .embed-responsive.embed-responsive-16by9
            iframe.embed-responsive-item(src='https://embed.la1tv.co.uk/144/383', allowfullscreen='', webkitallowfullscreen='', mozallowfullscreen='')

    .divider-blue
      .container
        .row
          .col-md-12
            .text-center
              h1 
                span#total-teams #{teams.length}
                |  teams competing


    script(src='http://maps.googleapis.com/maps/api/js?key=AIzaSyCOSGdGETZCnG79ZoWuq1JNi3aurSHMU0A')
    script(src='./js/app.js')
    
    script.
      $( document ).ready(function() {
          TrackingMap.init();
          TrackingMap.plotAll();
          
          $('#total-distance ').animateNumber({
              number: #{total},
              easing: 'easeInQuad'
          }, 10000 );
          
          $('#total-teams').animateNumber({
              number: #{teams.length},
              easing: 'easeInQuad'
          }, 1000 );
      });
